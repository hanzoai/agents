# Hanzo Agents Server Environment Variables
# Copy this file to .env and modify values as needed

# Core Hanzo Agents Configuration
HANZO_AGENTS_PORT=8080
HANZO_AGENTS_MODE=local
HANZO_AGENTS_CONFIG_FILE=./config/hanzo-agents.yaml

# Database Configuration (for local mode)
HANZO_AGENTS_STORAGE_LOCAL_DATABASE_PATH=./hanzo_agents_local.db
HANZO_AGENTS_STORAGE_LOCAL_KV_STORE_PATH=./hanzo_agents_local.bolt

# UI Configuration
HANZO_AGENTS_UI_ENABLED=true
HANZO_AGENTS_UI_MODE=embedded
HANZO_AGENTS_UI_SOURCE_PATH=./web/client
HANZO_AGENTS_UI_DIST_PATH=./web/client/dist
HANZO_AGENTS_UI_DEV_PORT=5173

# API Configuration
HANZO_AGENTS_API_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
HANZO_AGENTS_API_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
HANZO_AGENTS_API_CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
HANZO_AGENTS_API_CORS_EXPOSED_HEADERS=Content-Length,X-Total-Count
HANZO_AGENTS_API_CORS_ALLOW_CREDENTIALS=true

# Cloud Configuration (if using cloud mode)
# HANZO_AGENTS_CLOUD_ENABLED=false
# HANZO_AGENTS_CLOUD_API_KEY=your-api-key-here

# Storage Configuration
HANZO_AGENTS_STORAGE_MODE=local

# PostgreSQL Storage Configuration (when HANZO_AGENTS_STORAGE_MODE=postgresql)
# HANZO_AGENTS_STORAGE_POSTGRES_URL=postgresql://user:password@localhost:5432/hanzo-agents?sslmode=disable
# HANZO_AGENTS_STORAGE_POSTGRES_MAX_CONNECTIONS=25
# HANZO_AGENTS_STORAGE_POSTGRES_MAX_IDLE_CONNECTIONS=5
# HANZO_AGENTS_STORAGE_POSTGRES_CONNECTION_TIMEOUT=30s
# HANZO_AGENTS_STORAGE_POSTGRES_QUERY_TIMEOUT=30s
# HANZO_AGENTS_STORAGE_POSTGRES_ENABLE_MEMORY_FALLBACK=true
# HANZO_AGENTS_STORAGE_POSTGRES_ENABLE_DID_FALLBACK=true
# HANZO_AGENTS_STORAGE_POSTGRES_ENABLE_VC_FALLBACK=true
# HANZO_AGENTS_STORAGE_POSTGRES_ENABLE_AUTO_MIGRATION=true

# Cloud Storage Configuration (when HANZO_AGENTS_STORAGE_MODE=cloud)
# HANZO_AGENTS_STORAGE_CLOUD_POSTGRES_URL=postgresql://user:password@localhost:5432/hanzo-agents
# HANZO_AGENTS_STORAGE_CLOUD_MAX_CONNECTIONS=50
# HANZO_AGENTS_STORAGE_CLOUD_CONNECTION_POOL=true
# HANZO_AGENTS_STORAGE_CLOUD_REPLICATION_MODE=async

# Development/Debug
# GIN_MODE=debug
# LOG_LEVEL=info
