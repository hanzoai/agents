{
  "name": "@hanzo/agents-shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for Hanzo Agents",
  "license": "SEE LICENSE IN ../../LICENSE",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
